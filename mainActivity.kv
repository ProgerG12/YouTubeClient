#:import get_color_from_hex kivy.utils.get_color_from_hex

MDBoxLayout:
    md_bg_color: get_color_from_hex("#282828")
    
    MDNavigationRail:
        md_bg_color: get_color_from_hex("#3c3836")
        type: "unselected"
        width: "240dp"

        MDNavigationRailItem:
            text: "Video"
            icon: "video"
            on_release: app.setScreen("videoScreen")
        
        MDNavigationRailItem:
            text: "Library"
            icon: "bookshelf"
        
        MDNavigationRailItem:
            text: "Setings"
            icon: "cogs"
            on_release: app.setScreen("SetingsScreen")



<SetingsScreen>:
    MDBoxLayout:
        md_bg_color: get_color_from_hex("#3c3836")
        orientation: 'vertical'

        MDRectangleFlatButton:
            text: "TEST"

